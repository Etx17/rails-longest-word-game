<h1>NEW GAME</h1>
<p>This is @letters.join</p>
<p><%= @letters.join()  %></p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" value="<%= @letters.join('') %>" name="letters">
  <label for="word" class="form-label">What is the longest word you can find?</label>
  <input type="text" id="word" name="word" class="form-control">
  <button type="submit">Play</button>
</form>
<p>Score: <%= @points %> </p>
